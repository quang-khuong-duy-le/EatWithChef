<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bữa ăn ngon cùng đầu bếp nổi tiếng</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Oswald|Lato|Roboto:400,500,700|Open+Sans:600,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/frontend/css/Style")
    <link href="~/Content/frontend/skins/tango/skin.css" rel="stylesheet" />
    @RenderSection("headcss", required: false)
    <script type="text/javascript" src="~/Content/frontend/js/jquery.js"></script>
    <script type="text/javascript" src="~/Content/frontend/js/custom.js"></script>
    <script type="text/javascript" src="~/Content/frontend/js/html5.js"></script>
    <script type="text/javascript" src="~/Content/frontend/js/jquery.scrollTo-1.4.3.1-min.js"></script>
</head>

<body style="background-color: #f4f4f4">
    <div class="modal fade" id="loginPartial" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:auto; height:445px;top:50%;margin:-222px 0 0 -425px;display:none">
        @Html.Partial("_LoginPartial")
    </div>
    <div id="wrapper" style="z-index:1">
        <header id="header" style="border: 0;z-index: 2;">
            <div style="z-index: 1; height: 130px; width: 100%; background-color: white; border-bottom: 1px solid #ccc;">
                <div class="container" style="position: relative">
                    <div class="logo"></div>
                    <ul style="left: 0;">
                        <li><a href="/Ecommerce/Menu" class="bold">Thực đơn</a></li>
                        <li><a href="/Ecommerce/Chef" class="bold">Đầu bếp</a></li>
                        <li>Liên hệ</li>
                    </ul>
                    <ul style="right: 0;">
                        @if(!User.Identity.IsAuthenticated){
                        <li><a href="javascript:void(0)" class="bold" data-toggle="modal" data-target="#loginPartial">Đăng nhập</a></li>
                        }else{
                            <li>Welcome, @User.Identity.Name</li>
                            <li><a href="@Url.Action("LogOff","Account")" style="text-decoration:none">Đăng xuất</a></li>
                        }
                        <li><a href="/Ecommerce/xem-hoa-don" class="bold">Xem hóa đơn</a></li>
                        <li style="position: relative;">CART
                            <div onmouseover="showcart(0,1)" onmouseout="showcart('-300px',-1)" style="width: 70px; height: 54px; position: absolute; top: 0; left: -5px; text-align: center; background-color: white">CART</div>
                        </li>
                    </ul>
                </div>
            </div>
            <div style="position: relative; z-index: -1">
                <div id="shopping-cart" onmouseover="showcart(0,1)" onmouseout="showcart('-300px',-1)">
                    <div class="container" style="overflow: hidden">
                        <div style="max-width: 1100px; width: 100%; position: relative">
                            <div style="z-index: 1;">
                                <div id="contain-item">
                                    <div id="slider-cart">
                                    </div>
                                </div>
                                <div id="price-table">
                                    <div style="border-bottom: 1px solid #ccc; padding: 0 0 15px 0; margin: 0 0 7px 0;">
                                        <div class="title-price">Số lượng</div>
                                        <div class="value-price" id="number-of-cart-item"></div>
                                        <div style="clear: both"></div>
                                    </div>
                                    <div>
                                        <div class="title-price" style="font-size: 16px;">Thành tiền</div>
                                        <div class="value-price" id="total-price"></div>
                                        <div style="clear: both"></div>
                                    </div>
                                    <a href="/Ecommerce/thanh-toan">Thanh toán</a>
                                </div>
                                <div style="clear: both"></div>
                            </div>
                            <div id="none-item">Giỏ hàng hiện tại của bạn chưa có món nào! Hãy chọn ngay nào!</div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
        <footer id="footer">
            <div class="row-fluid">
               
                <section class="footer-section-3">
                    <div class="container">
                        <div class="span6">
                            <div class="copy-section"><strong class="copy">&copy; 2014 ForkVN, Designed by <a href="http://nguyenthanhnhan.net" class="link" target="_blank">EWC Development Team</a></strong></div>
                        </div>
                        <div class="span6">
                            <div class="footer-social-box">
                                <ul>
                                    <li class="social-icon-1"><a href="#">p</a></li>
                                    <li class="social-icon-2"><a href="#">twitter</a></li>
                                    <li class="social-icon-3"><a href="#">facebook</a></li>
                                    <li class="social-icon-4"><a href="#">facebook</a></li>
                                    <li class="social-icon-5"><a href="#">facebook</a></li>
                                    <li class="social-icon-6"><a href="#">facebook</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </footer>
    </div>
    <script src="~/Content/frontend/js/bootstrap.min.js"></script>
    <script src="~/Content/frontend/js/jquery.jcarousel.min.js"></script>
    <script src="~/Content/frontend/js/jquery.mCustomScrollbar.concat.min.js"></script>
    @Scripts.Render("~/Content/frontend/js/Scripts")

    @RenderSection("scripts", required: false)
</body>
</html>
